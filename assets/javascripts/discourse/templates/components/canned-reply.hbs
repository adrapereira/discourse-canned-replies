<div class="canned-reply">
  <div {{action "toggle"}} class="canned-reply-title">
    {{d-button class="btn canned-replies-apply"
        action=(action "apply")
        icon="clipboard"}}

    {{d-button class="btn canned-replies-edit"
        action=(action "editReply" actionParam=allTags)
        icon="pencil"}}

    <b>{{reply.title}}</b>

    {{#each reply.tags as |t|}}
      <span class="badge badge-notification new-posts">{{t}}</span>
    {{/each}}
  </div>

  {{#if isOpen}}
    <div class="canned-replies-content">
      {{{cook-text reply.content}}}
    </div>
  {{/if}}
</div>
